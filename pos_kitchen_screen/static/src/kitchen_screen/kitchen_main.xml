<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Main Component Template -->
    <t t-name="pos_kitchen_screen.KitchenMain">
        <div class="kitchen-screen-container" t-att-class="{ 'ks-sidebar-collapsed': state.sidebarCollapsed }">
            <t t-if="!state.selectedDisplayId">
                <!-- SELECTION SCREEN -->
                <div class="ks-selection-screen">
                    <div class="ks-selection-card">
                        <h1>Select Kitchen Display</h1>
                        <div class="ks-display-list">
                            <t t-foreach="state.availableDisplays" t-as="disp" t-key="disp.id">
                                <button class="btn btn-primary btn-lg w-100 mb-2" t-on-click="() => this.selectDisplay(disp.id)">
                                    <t t-esc="disp.name"/>
                                </button>
                            </t>
                            <t t-if="state.availableDisplays.length === 0">
                                <p class="text-muted">No Displays Configured.</p>
                                <a href="/web#action=pos_kitchen_screen.action_pos_kitchen_display" class="btn btn-link">Create a Display</a>
                            </t>
                        </div>
                        <div class="mt-3 text-center">
                             <button class="btn btn-secondary btn-sm" t-on-click="closeScreen">
                                 <i class="fa fa-arrow-left"/> Back to Dashboard
                             </button>
                        </div>
                    </div>
                </div>
            </t>
            <t t-else="">
                <!-- MAIN KITCHEN UI -->
                <!-- Header -->
                <div class="ks-header">
                    <div class="ks-brand">
                        <i class="fa fa-cutlery me-2"/> 
                        <span class="d-none d-md-inline" t-if="state.currentDisplayConfig"><t t-esc="state.currentDisplayConfig.name"/></span>
                        <span class="d-none d-md-inline" t-else="">Kitchen</span>
                    </div>
                    
                    <!-- STAGE FILTERS -->
                    <div class="ks-filters btn-group mx-3">
                         <button class="btn btn-sm" 
                                 t-att-class="!state.filterStage ? 'btn-primary' : 'btn-outline-secondary'"
                                 t-on-click="() => this.toggleStageFilter('all')">
                             All
                         </button>
                         <t t-foreach="state.stages" t-as="stage" t-key="stage.id">
                             <button class="btn btn-sm" 
                                     t-att-class="state.filterStage === stage.id ? 'btn-primary' : 'btn-outline-secondary'"
                                     t-on-click="() => this.toggleStageFilter(stage.id)">
                                 <t t-esc="stage.name"/>
                             </button>
                         </t>
                    </div>

                    <div class="ks-controls">
                        <button class="btn btn-secondary ks-btn-audio me-2" t-on-click="toggleAudio">
                            <i t-att-class="state.audioEnabled ? 'fa fa-volume-up' : 'fa fa-volume-off'"/>
                        </button>
                        <button class="btn btn-warning" t-on-click="forgetDisplay">
                            <i class="fa fa-sign-out"/>
                        </button>
                    </div>
                </div>

                <div class="ks-body">
                    <!-- LEFT SIDEBAR: Aggregation -->
                    <div class="ks-sidebar">
                        <div class="ks-sidebar-title d-flex justify-content-between align-items-center">
                            <span t-if="!state.sidebarCollapsed">QUEUE</span>
                            <button class="btn btn-sm btn-link text-white p-0" t-on-click="toggleSidebar">
                                <i t-att-class="state.sidebarCollapsed ? 'fa fa-chevron-right' : 'fa fa-chevron-left'"/>
                            </button>
                        </div>
                        <div class="ks-product-list" t-if="!state.sidebarCollapsed">
                            <t t-foreach="aggregatedProducts" t-as="product" t-key="product.id">
                                <div class="ks-product-item" 
                                     t-att-class="{ 'active': state.filterProduct === product.id }"
                                     t-on-click="() => this.toggleFilter(product.id)">
                                    <span class="ks-p-name"><t t-esc="product.name"/></span>
                                    <span class="ks-p-qty badge rounded-pill bg-primary"><t t-esc="product.qty"/></span>
                                </div>
                            </t>
                        </div>
                    </div>

                    <!-- RIGHT GRID: Orders -->
                    <div class="ks-grid">
                        <t t-if="filteredOrders.length === 0">
                            <div class="ks-empty-state">
                                <i class="fa fa-check-circle"/> No Pending Orders
                            </div>
                        </t>
                        <t t-else="">
                            <div class="ks-cards-wrapper">
                                <t t-foreach="filteredOrders" t-as="order" t-key="order.id">
                                    <KitchenOrderCard 
                                        order="order" 
                                        slaWarning="config.slaWarning" 
                                        slaCritical="config.slaCritical"
                                        onClickLine="(o, l) => this.clickLine(o, l)"
                                        onResetOrder="(o) => this.resetOrder(o)"
                                        onClearOrder="(o) => this.clearOrder(o)"
                                        onSelectOrder="(o) => this.selectOrder(o)"
                                    />
                                </t>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </div>
        
        <!-- MODAL POPUP -->
        <t t-if="state.selectedOrder">
            <div class="ks-modal-overlay" t-on-click.self="closePopup">
                <div class="ks-modal-content">
                    <div class="ks-modal-header">
                        <div class="ks-modal-title">
                            <span t-esc="state.selectedOrder.name"/>
                            <span t-if="state.selectedOrder.table" class="badge bg-secondary ms-2"><span t-esc="state.selectedOrder.table"/></span>
                        </div>
                        <button class="ks-modal-close" t-on-click="closePopup"><i class="fa fa-times"/></button>
                    </div>
                    <div class="ks-modal-body">
                         <div class="ks-info-section">
                             <span class="ks-info-label">Time:</span> <span t-esc="state.selectedOrder.date_order"/>
                         </div>
                         <div class="ks-info-section" t-if="state.selectedOrder.note">
                             <div class="ks-info-label">Notes:</div>
                             <div class="text-danger"><t t-esc="state.selectedOrder.note"/></div>
                         </div>
                         
                         <table class="table table-striped align-middle">
                             <thead>
                                 <tr>
                                     <th style="width: 10%;">Qty</th>
                                     <th style="width: 40%;">Product</th>
                                     <th style="width: 30%;">Stage</th>
                                     <th style="width: 20%;">Actions</th>
                                 </tr>
                             </thead>
                             <tbody>
                                 <tr t-foreach="state.selectedOrder.lines" t-as="line" t-key="line.id">
                                     <td><strong t-esc="line.qty"/></td>
                                     
                                     <!-- Product Name: Click to Toggle Stage -->
                                     <td t-on-click="() => this.clickLine(state.selectedOrder, line)" style="cursor: pointer;">
                                        <span t-esc="line.product_id[1]"/>
                                        <div t-if="line.kitchen_stage_id and line.kitchen_stage_id[1] === 'Done'" class="text-muted small">
                                            (Tap to Reset)
                                        </div>
                                     </td>
                                     
                                     <!-- Stage Badge: Click to Toggle Stage -->
                                     <td t-on-click="() => this.clickLine(state.selectedOrder, line)" style="cursor: pointer;">
                                         <span t-if="line.kitchen_stage_id" 
                                               t-att-class="line.kitchen_stage_id[1] === 'Done' ? 'badge bg-success' : 'badge bg-info'">
                                             <t t-esc="line.kitchen_stage_id[1]"/>
                                         </span>
                                     </td>
                                     
                                     <!-- Actions: Recipe Button -->
                                     <td>
                                         <button t-if="line.has_recipe" class="btn btn-sm btn-outline-dark" 
                                                 t-on-click.stop="() => this.openRecipe(line)" title="View Recipe">
                                             <i class="fa fa-book"/> Recipe
                                         </button>
                                     </td>
                                 </tr>
                             </tbody>
                         </table>
                    </div>
                    <div class="ks-modal-footer">
                        <button class="btn btn-secondary" t-on-click="closePopup">Close</button>
                    </div>
                </div>
            </div>
        </t>
    </t>

    <!-- Order Card Template -->
    <t t-name="pos_kitchen_screen.KitchenOrderCard">
        <div class="ks-card" t-att-class="state.statusRequest">
            <div class="ks-card-header">
                <div>
                    <div class="ks-order-name"><t t-esc="props.order.name"/></div>
                    <div class="ks-order-time text-muted" style="font-size: 0.8rem;">
                        <i class="fa fa-calendar"/> <t t-esc="props.order.date_order"/>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <div class="ks-table-name me-2" t-if="props.order.table"><t t-esc="props.order.table"/></div>
                    <button class="btn btn-sm btn-info text-white" t-on-click="() => props.onSelectOrder(props.order)">
                        <i class="fa fa-info-circle"/>
                    </button>
                </div>
            </div>
            <div class="ks-card-body">
                <t t-foreach="props.order.lines" t-as="line" t-key="line.id">
                    <div class="ks-order-line" t-on-click="() => props.onClickLine(props.order, line)" style="cursor: pointer;">
                        <span class="ks-line-qty"><t t-esc="line.qty"/>x</span>
                        <span class="ks-line-name" 
                              t-att-style="line.kitchen_stage_id and line.kitchen_stage_id[1] === 'Done' ? 'text-decoration: line-through; opacity: 0.6;' : ''">
                            <t t-esc="line.product_id[1]"/>
                        </span>
                        <t t-if="line.kitchen_stage_id">
                            <span class="badge bg-secondary ms-auto" style="font-size: 0.7em;">
                                <t t-esc="line.kitchen_stage_id[1]"/>
                            </span>
                        </t>
                    </div>
                </t>
            </div>
            <div class="ks-card-footer d-flex justify-content-between align-items-center">
                <div class="ks-timer">
                    <i class="fa fa-clock-o"/> <span t-esc="state.durationText"/>
                </div>
                <t t-if="props.order.kitchen_state === 'done'">
                    <div class="ks-actions">
                        <button class="btn btn-sm btn-outline-warning me-1" t-on-click="() => props.onResetOrder(props.order)" title="Restart Order">
                            <i class="fa fa-refresh"/>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" t-on-click="() => props.onClearOrder(props.order)" title="Remove from Screen">
                            <i class="fa fa-trash"/>
                        </button>
                    </div>
                </t>
            </div>
        </div>
    </t>

</templates>
