<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">pos.config.settings.view.form.inherit.kitchen</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_interface_section']" position="after">
                <block title="Kitchen Screen" id="pos_kitchen_screen_section">
                    <setting string="SLA Management" help="Define time thresholds for orders.">
                        <div class="row">
                            <label for="kitchen_sla_warning" class="col-lg-3 o_light_label"/>
                            <field name="kitchen_sla_warning"/>
                        </div>
                        <div class="row">
                            <label for="kitchen_sla_critical" class="col-lg-3 o_light_label"/>
                            <field name="kitchen_sla_critical"/>
                        </div>
                    </setting>
                    <setting string="Notifications" help="Enable audio alerts for new orders.">
                        <field name="enable_sound_notifications"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
