<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_kitchen_recipe" model="ir.ui.view">
        <field name="name">product.template.form.kitchen.recipe</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='description_sale']" position="after">
                <group string="Kitchen Info" name="kitchen_info">
                    <field name="recipe_file" filename="recipe_filename"/>
                    <field name="recipe_filename" invisible="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
