<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_kitchen_display_form" model="ir.ui.view">
        <field name="name">pos.kitchen.display.form</field>
        <field name="model">pos.kitchen.display</field>
        <field name="arch" type="xml">
            <form string="Kitchen Display">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Display Name (e.g. Bar)"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Source Configuration">
                            <field name="pos_config_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <div class="text-muted" colspan="2">
                                If empty, orders from <b>ALL</b> POS stations will be shown.
                            </div>
                        </group>
                        <group string="Product Filtering">
                            <field name="pos_category_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <div class="text-muted" colspan="2">
                                If empty, <b>ALL</b> products will be shown.
                            </div>
                        </group>
                    </group>
                    <group string="Alerts &amp; Notifications">
                         <group>
                             <field name="kitchen_sla_warning"/>
                             <field name="kitchen_sla_critical"/>
                         </group>
                         <group>
                             <field name="enable_sound_notifications"/>
                         </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pos_kitchen_display_tree" model="ir.ui.view">
        <field name="name">pos.kitchen.display.tree</field>
        <field name="model">pos.kitchen.display</field>
        <field name="arch" type="xml">
            <list string="Kitchen Displays">
                <field name="name"/>
                <field name="pos_config_ids" widget="many2many_tags"/>
                <field name="pos_category_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="action_pos_kitchen_display" model="ir.actions.act_window">
        <field name="name">Kitchen Displays</field>
        <field name="res_model">pos.kitchen.display</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_pos_kitchen_display"
              name="Kitchen Displays"
              parent="point_of_sale.menu_point_config_product"
              action="action_pos_kitchen_display"
              sequence="100"/>
</odoo>
